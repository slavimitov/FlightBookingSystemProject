<link rel="stylesheet" href="~/css/search.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/card.css" asp-append-version="true" />
@model QueryModel

<div class="wrapper" style="background-color: rgba(255,255,255, .8); ">
    <form method="get">
        <div class="form-group d-sm-flex margin">
            <div class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
                <input class="form-control" placeholder="From" asp-for="Origin">
                <div class="label" id="from"></div> <span class="fas fa-dot-circle text-muted"></span>
            </div>
            <div class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
                <input class="form-control" placeholder="To" asp-for="Destination">
                <div class="label" id="to"></div> <span class="fas fa-map-marker text-muted"></span>
            </div>
        </div>
        <div class="form-group d-sm-flex margin">
            <div class="d-flex align-items-center flex-fill me-sm1 my-sm-0 border-bottom position-relative">
                <input type="date" placeholder="Depart Date" class="form-control" asp-for="DepartureDate">
                <div class="label" id="depart"></div>
            </div>
            <div class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
                <input type="date" placeholder="Return Date" class="form-control" asp-for="ReturnDate">
                <div class="label" id="return"></div>
            </div>
        </div>
        <div class="form-group border-bottom d-flex align-items-center position-relative">
            <input placeholder="Traveller(s)" class="form-control" asp-for="Travellers">
            <div class="label" id="psngr"></div> <span class="fas fa-users text-muted"></span>
        </div>
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>
</div>

<div id="PlaceHolderHere"></div>
<div class="container">


    <div class="row">
        @foreach (var flight in Model.Flights)
        {
            <partial name="_DisplayFlightPartial" model="flight" />

        }
    </div>
</div> 