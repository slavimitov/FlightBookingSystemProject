@model TravelogueDetailsViewModel
<link rel="stylesheet" href="~/css/detailsTravelogue.css" asp-append-version="true" />

<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'>
<link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'>

<body>
    <div class="container">
        <div class="jumbotron">
            <div class="text-center  page-header">
                <h1>@Model.Title</h1>
                <small>@Model.Subtitle</small>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <figure class="figure">
                        <img class="figure-img padded img-responsive" src="@Model.DestinationImageUrl">
                        <figcaption class="padded figure-caption">@Model.Destination</figcaption>
                    </figure>
                    <h3 class="text-center">@Model.Topic</h3>
                    <p>@Model.Content</p>
                </div>
            </div>
            <div class="row">
                <div class="padded col-md-8">
                </div>
            </div>
            <div class="row">

                @if (!String.IsNullOrEmpty(Model.Email))
                {
                    <div class="col-md-8">
                        <p class="padded">You can contact creator on email - @Model.Email </p>
                    </div>
                }
                <div class="col-md-4">
                    <img class="padded img-responsive" src="@Model.SecondImageUrl">
                </div>
            </div>
        </div>

    </div>
</body>