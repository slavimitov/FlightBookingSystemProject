@model AllTraveloguesViewModel

<li class="col-lg-4 col-md-5 image-block full-width p-3">
    <div class="image-block-inner">
        <a class="mh-100" href="Details?travelogueId=@Model.travelogueId">
            <img src="@Model.DestinationImageUrl" class="img-responsive w-100">
        </a>
        <span class="hp-posts-cat">@Model.Destination</span>
        <h4 class="mt-3"><a href="Details?travelogueId=@Model.travelogueId">@Model.Title</a></h4>
        <a href="Details?travelogueId=@Model.travelogueId" class="read-more">Read more &gt;</a>
    </div>
</li>