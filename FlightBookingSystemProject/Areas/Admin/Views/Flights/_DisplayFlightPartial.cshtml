@using FlightBookingSystemProject.Infastructure
@model AllFlightsViewModel

<div class="col-sm-6 col-md-3 col-xs-12">
    <article class="card card-big mb15">
        <div class="card__img-wrap">
            <img src="@Model.DestinationImageUrl">
            <h4 class="title title-overlay-center">Explore @Model.DestinationName </h4>
        </div>
        <div class="card__info">
            <div class="title-left-wrap"> <h5>@Model.Origin</h5> <small>@Model.OriginName </small></div>
            <span class="icon-center-wrap"><i class="material-icons rotate90"></i></span>
            <div class="title-right-wrap"> <h5>@Model.Destination</h5> <small>@Model.DestinationName </small></div>
        </div> <!--  card__info //  -->
        <div class="card__pricelist">
            <div class="cost">
                <div class="logo-wrap"><img src="https://asfartrip.com/public/assets/images/airline_logo/J9.png"></div>
                <div class="icon-wrap"> <i class="material-icons"></i>  <small>@Model.DepartureDate</small> </div>
                <div class="price-wrap">
                    <var class="price"><span class="currency">EUR</span>@Model.Price</var>               
                        <form asp-area="Admin" asp-controller="Flights" asp-action="Delete" method="get">
                            @Html.ActionLink("Delete", "Delete", new { Area = "Admin", id = Model.FlightId}, new { @class="btn btn-primary" })
                        </form>
                        <form asp-area="Admin" asp-controller="Flights" asp-action="Delete" method="get">
                            @Html.ActionLink("Edit", "Edit", new { Area = "Admin", id = Model.FlightId}, new { @class="btn btn-primary" })
                        </form>
                </div>
            </div><!--  cost //  -->
        </div> <!-- card__pricelist // -->
    </article> <!-- card // -->
</div>
